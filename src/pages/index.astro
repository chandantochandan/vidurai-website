    line-height: 1.6;
    color: var(--color-text);
    background: var(--color-bg);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  section {
    padding: 4rem 0;
  }

  h1, h2, h3, h4 {
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 2rem;
  }

  /* Hero Section */
  .hero {
    text-align: center;
    padding: 6rem 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .om-symbol {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .title {
    font-size: 4.5rem;
