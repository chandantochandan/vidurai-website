                <span>MIT LICENSE</span>
            </div>
            <div class="footer-right">
                <a href="https://pypi.org/project/vidurai/">PYPI: v1.5.1</a>
            </div>
        </footer>

    </main>

<style>
    /* --- RESET & BASICS --- */
    :root {
        --bg: #050505;
        --fg: #e5e5e5;
        --fg-dim: #666;
        --accent: #7c3aed; /* Purple */
        --accent-dim: rgba(124, 58, 237, 0.2);
        --success: #10b981;
        --border: #222;
        --border-light: #333;
        
        --font-head: 'Sora', sans-serif;
        --font-body: 'IBM Plex Sans', sans-serif;
        --font-mono: 'JetBrains Mono', monospace;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }

    body {
        background: var(--bg);
        color: var(--fg);
        font-family: var(--font-body);
        font-size: 14px;
        line-height: 1.5;
        overflow-x: hidden;
    }

    a { text-decoration: none; color: inherit; transition: color 0.2s; }
    ul { list-style: none; }

    /* --- BACKGROUND GRID --- */
    .grid-overlay {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background-image: 
            linear-gradient(var(--border) 1px, transparent 1px),
            linear-gradient(90deg, var(--border) 1px, transparent 1px);
        background-size: 40px 40px;
        opacity: 0.15;
        z-index: -1;
        pointer-events: none;
    }

    .vignette {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background: radial-gradient(circle, transparent 40%, black 100%);
        z-index: -1;
        pointer-events: none;
    }

    /* --- TOP BAR --- */
    .top-bar {
        height: 60px;
        border-bottom: 1px solid var(--border);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 24px;
        background: rgba(5,5,5,0.8);
        backdrop-filter: blur(10px);
        position: sticky;
        top: 0;
        z-index: 100;
        font-family: var(--font-mono);
        font-size: 12px;
        letter-spacing: 0.05em;
    }

    .bar-left, .bar-right { display: flex; align-items: center; gap: 20px; }
    
    .logo { display: flex; align-items: center; gap: 12px; font-weight: 700; }
    .logo-box { 
        width: 24px; height: 24px; 
        background: var(--accent); 
        color: white; 
        display: grid; place-items: center; 
        font-weight: 800;
    }
    .version { color: var(--fg-dim); margin-left: 8px; font-weight: 400; }

    .bar-center { display: flex; gap: 32px; }
    .bar-center a:hover { color: var(--accent); }

    .btn-solid {
        background: var(--fg);
        color: var(--bg);
        padding: 6px 12px;
        font-weight: 700;
    }
    .btn-solid:hover { background: var(--accent); color: white; }

    /* --- MAIN GRID LAYOUT --- */
    .main-grid {
        max-width: 1200px;
        margin: 0 auto;
        border-left: 1px solid var(--border);
        border-right: 1px solid var(--border);
        background: rgba(5,5,5,0.5);
    }

    section { padding: 60px 40px; border-bottom: 1px solid var(--border); }

    /* --- HERO --- */
    .hero-section {
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 40px;
        min-height: 600px;
        align-items: center;
    }

    .meta-label {
        font-family: var(--font-mono);
        color: var(--success);
        font-size: 12px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .indicator { width: 6px; height: 6px; background: var(--success); border-radius: 50%; box-shadow: 0 0 8px var(--success); }

    .display-title {
        font-family: var(--font-head);
        font-size: 5rem;
        line-height: 0.9;
        font-weight: 800;
        letter-spacing: -0.04em;
        margin-bottom: 32px;
        text-transform: uppercase;
    }
    
    .text-stroke {
        -webkit-text-stroke: 2px var(--fg-dim);
        color: transparent;
        opacity: 0.5;
    }

    .lead-text {
        font-size: 1.2rem;
        color: var(--fg-dim);
        max-width: 500px;
        margin-bottom: 40px;
    }

    .stats-row {
        display: flex;
        align-items: center;
        gap: 32px;
        margin-bottom: 40px;
    }

    .stat-block { display: flex; flex-direction: column; }
    .stat-val { font-family: var(--font-head); font-size: 2rem; font-weight: 700; color: var(--accent); }
    .stat-label { font-family: var(--font-mono); font-size: 11px; color: var(--fg-dim); margin-top: 4px; }
    .stat-sep { width: 1px; height: 40px; background: var(--border); }

    .cmd-row {
        background: #111;
        border: 1px solid var(--border-light);
        padding: 12px 16px;
        font-family: var(--font-mono);
        display: inline-flex;
        align-items: center;
        gap: 16px;
        width: 100%;
        max-width: 400px;
    }
    .prompt { color: var(--accent); margin-right: 8px; }
    .copy-btn { 
        width: 16px; height: 16px; 
        background: var(--fg-dim); 
        border: none; margin-left: auto; 
        mask: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z'/%3E%3C/svg%3E");
        cursor: pointer;
    }
    .copy-btn:hover { background: white; }

    /* --- HERO VISUAL --- */
    .visual-frame {
        width: 100%;
        height: 400px;
        position: relative;
        border: 1px solid var(--border);
        background: radial-gradient(circle, #111 0%, #050505 70%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        perspective: 800px;
    }

    .hud-ring {
        position: absolute;
        border-radius: 50%;
        border: 1px dashed var(--border-light);
    }
    .ring-1 { width: 250px; height: 250px; animation: rot 20s linear infinite; }
    .ring-2 { width: 350px; height: 350px; border-color: var(--accent-dim); animation: rot 30s linear infinite reverse; }
    .core-gem { width: 60px; height: 60px; background: var(--accent); filter: blur(30px); opacity: 0.4; }

    .data-card {
        position: absolute;
        width: 180px;
        background: rgba(0,0,0,0.8);
        border: 1px solid var(--accent);
        padding: 12px;
        font-family: var(--font-mono);
        font-size: 10px;
        top: 20%; right: 10%;
        box-shadow: 0 10px 30px black;
    }
    .card-head { border-bottom: 1px solid var(--border); padding-bottom: 8px; margin-bottom: 8px; color: var(--accent); font-weight: 700; }
    .row { display: flex; justify-content: space-between; margin-bottom: 4px; }
    .ok { color: var(--success); } .warn { color: #fbbf24; }

    /* --- TECH GRID --- */
    .grid-header { margin-bottom: 40px; display: flex; align-items: center; gap: 20px; }
    .grid-header h2 { font-family: var(--font-mono); font-size: 1rem; color: var(--fg-dim); }
    .header-line { flex: 1; height: 1px; background: var(--border); }

    .tech-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1px; /* Border trick */
        background: var(--border); /* Grid line color */
        padding: 1px 40px; /* Adjust for border */
    }
    
    /* Reset padding for grid children to handle borders manually */
    .tech-grid { 
        display: block; 
        padding: 60px 40px;
    }
    .tech-grid .grid-header { margin-bottom: 40px; }
    
    /* Actually using flex wrap for the cards to control spacing better in this style */
    .tech-grid { display: flex; flex-wrap: wrap; gap: 24px; align-content: stretch; }
    .grid-header { width: 100%; }

    .module-card {
        flex: 1;
        min-width: 300px;
        border: 1px solid var(--border);
        padding: 24px;
        background: rgba(255,255,255,0.02);
    }

    .module-head { display: flex; align-items: center; gap: 12px; margin-bottom: 16px; color: var(--accent); }
    .module-head h3 { font-family: var(--font-mono); font-size: 14px; letter-spacing: 0.05em; }
    .icon { font-size: 16px; }

    .code-display {
        margin-top: 20px;
        background: #000;
        border: 1px solid var(--border);
        padding: 12px;
        font-family: var(--font-mono);
        font-size: 11px;
        color: var(--fg-dim);
    }
    .indent { margin-left: 16px; }
    .double { margin-left: 32px; }
    .big-stat { font-family: var(--font-head); font-size: 3rem; font-weight: 700; color: white; margin: 20px 0; }

    /* --- DATA TABLE --- */
    .data-table {
        width: 100%;
        border: 1px solid var(--border);
        font-family: var(--font-mono);
        font-size: 12px;
    }

    .dt-row {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        border-bottom: 1px solid var(--border);
    }
    .dt-row:last-child { border-bottom: none; }

    .dt-col { padding: 16px 24px; border-right: 1px solid var(--border); }
    .dt-col:last-child { border-right: none; }

    .dt-head { background: #111; color: var(--fg-dim); font-weight: 700; }
    .highlight { color: var(--accent); }
    .text-accent { color: var(--accent); font-weight: 700; }
    .warn { color: #fbbf24; }

    /* --- SCHEMATIC --- */
    .schematic-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: center;
    }

    .layer-col { display: flex; flex-direction: column; align-items: center; }
    
    .layer-box {
        width: 100%;
        max-width: 300px;
        border: 1px solid var(--border);
        padding: 20px;
        background: #0a0a0a;
        position: relative;
    }
    .l3 { border-top: 2px solid var(--accent); }
    .l2 { border-left: 2px solid var(--fg-dim); }
    .l1 { border-bottom: 2px solid var(--success); }

    .layer-meta { font-family: var(--font-mono); font-size: 9px; color: var(--fg-dim); margin-bottom: 8px; }
    .layer-box h4 { font-family: var(--font-head); font-size: 1.2rem; margin-bottom: 4px; }
    .layer-box p { font-size: 12px; color: var(--fg-dim); }

    .layer-connector { width: 1px; height: 30px; background: var(--border); }

    .mono-text { font-family: var(--font-mono); color: var(--fg-dim); max-width: 300px; font-size: 12px; line-height: 1.6; }

    /* --- FOOTER --- */
    .footer-bar {
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 40px;
        font-family: var(--font-mono);
        font-size: 10px;
        color: var(--fg-dim);
        border-top: 1px solid var(--border);
    }
    .sep { margin: 0 12px; color: var(--border); }
    .footer-right a:hover { color: var(--accent); }

    @keyframes rot { to { transform: rotate(360deg); } }

    /* --- RESPONSIVE --- */
    @media (max-width: 900px) {
        .hero-section { grid-template-columns: 1fr; text-align: left; }
        .display-title { font-size: 3.5rem; }
        .schematic-layout { grid-template-columns: 1fr; }
        .bar-center { display: none; }
        .dt-row { grid-template-columns: 1fr 1fr; }
        .dt-col:nth-child(2) { display: none; } /* Hide legacy col on mobile */
        .tech-grid { flex-direction: column; }
    }
</style>
</body>
</html>