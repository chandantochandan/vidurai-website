  :root {
    --color-primary: #7c3aed;
    --color-secondary: #4f46e5;
    --color-accent: #f59e0b;
    --color-bg: #ffffff;
    --color-bg-alt: #f9fafb;
    --color-text: #1f2937;
    --color-text-light: #6b7280;
    --color-border: #e5e7eb;
    --spacing: 1rem;
  }

  body {
