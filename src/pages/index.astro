<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    :root {
        --primary: #7c3aed;
        --secondary: #4f46e5;
        --accent: #f59e0b;
        --success: #10b981;
        --error: #ef4444;
        --bg-dark: #0f172a;
        --bg-card: rgba(30, 41, 59, 0.5);
        --border: #334155;
        --text-primary: #f1f5f9;
        --text-secondary: #cbd5e1;
        --text-muted: #64748b;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: var(--bg-dark);
        color: var(--text-primary);
        line-height: 1.6;
        overflow-x: hidden;
    }

    /* Animated Background */
    .bg-animated {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        z-index: -1;
    }

    .bg-animated::before {
        content: '';
        position: absolute;
        width: 200%;
        height: 200%;
        background-image:
            radial-gradient(circle at 20% 30%, rgba(124, 58, 237, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(245, 158, 11, 0.1) 0%, transparent 50%);
        animation: float 20s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0); }
        50% { transform: translate(-50px, -50px); }
    }

    /* Header */
    header {
        padding: 1.5rem 5%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid var(--border);
        backdrop-filter: blur(10px);
        background: rgba(15, 23, 42, 0.8);
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        text-decoration: none;
    }

    .logo img {
        width: 40px;
        height: 40px;
        border-radius: 8px;
    }

    nav {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    nav a {
        color: var(--text-secondary);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
    }

    nav a:hover {
        color: var(--accent);
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
        display: inline-block;
        border: none;
        cursor: pointer;
        font-size: 1rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--accent), var(--success));
        color: white;
        box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
        position: relative;
        overflow: hidden;
    }

    .btn-primary::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
    }

    .btn-primary:hover::before {
        width: 300px;
        height: 300px;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 25px rgba(245, 158, 11, 0.5);
    }

    .btn-secondary {
        border: 2px solid var(--primary);
        color: var(--text-primary);
        background: transparent;
    }

    .btn-secondary:hover {
        background: rgba(124, 58, 237, 0.1);
        border-color: var(--accent);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(124, 58, 237, 0.3);
    }

    .btn-large {
        padding: 1rem 2rem;
        font-size: 1.125rem;
        border-radius: 0.75rem;
        font-weight: 700;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        flex-direction: column;
    }

    /* Container */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 5%;
    }

    /* Hero Section */
    .hero {
        max-width: 1200px;
        margin: 0 auto;
        padding: 5rem 5% 3rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }

    .hero-foundation {
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .hero-left h1 {
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        background: linear-gradient(135deg, #ffffff 0%, #a5b4fc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        font-size: 1.125rem;
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .tagline {
        font-size: 1.125rem;
        color: var(--accent);
        margin-bottom: 1rem;
        font-style: italic;
    }

    .hero-stats {
        display: flex;
        gap: 1.5rem;
        margin: 1.5rem 0;
        flex-wrap: wrap;
    }

    .hero-stats span {
        background: var(--bg-card);
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        border: 1px solid var(--border);
    }

    .hero-stats-inline {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin: 1.5rem 0;
        font-size: 0.875rem;
    }

    .hero-stats-inline span {
        background: rgba(124, 58, 237, 0.1);
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        white-space: nowrap;
    }

    .hero-ctas {
        display: flex;
        gap: 1rem;
        align-items: center;
        margin: 2rem 0 1rem;
    }

    .btn-label {
        font-size: 0.75rem;
        opacity: 0.8;
        display: block;
        font-weight: 500;
        margin-bottom: 0.25rem;
    }

    .hero-note {
        text-align: center;
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin-top: 1rem;
    }

    .hero-subtext {
        color: var(--text-muted);
        font-size: 0.875rem;
        margin-top: 1rem;
    }

    .hero-right {
        text-align: center;
    }

    .demo-placeholder {
        background: var(--bg-card);
        border: 2px dashed var(--border);
        border-radius: 1rem;
        padding: 4rem 2rem;
        text-align: center;
    }

    .demo-placeholder .icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .demo-video-container {
        position: relative;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,0.5);
        border: 2px solid var(--primary);
        background: rgba(15, 23, 42, 0.8);
    }

    .demo-video-container iframe {
        width: 100%;
        aspect-ratio: 16/9;
        display: block;
    }

    .video-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
        padding: 1.5rem;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .demo-video-container:hover .video-overlay {
        opacity: 1;
    }

    .video-caption {
        color: white;
        text-align: center;
        margin: 0;
    }

    .video-caption a {
        color: var(--accent);
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .video-caption a:hover {
        text-decoration: underline;
    }

    /* Stats Bar */
    .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 4rem auto;
        padding: 0 5%;
    }

    .stat {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        backdrop-filter: blur(10px);
        transition: transform 0.3s, border-color 0.3s;
    }

    .stat:hover {
        transform: translateY(-5px);
        border-color: var(--accent);
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--accent) 0%, var(--success) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-label {
        color: var(--text-secondary);
        margin-top: 0.5rem;
        font-size: 1rem;
    }

    /* Social Proof */
    .social-proof {
        max-width: 1200px;
        margin: 4rem auto 2rem;
        padding: 0 5%;
        text-align: center;
    }

    .proof-heading {
        color: var(--text-secondary);
        margin-bottom: 2rem;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .proof-stats {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
    }

    .proof-item {
        text-align: center;
        padding: 1.5rem 1rem;
        background: rgba(30, 41, 59, 0.3);
        border: 1px solid var(--border);
        border-radius: 0.75rem;
        transition: transform 0.3s, border-color 0.3s;
    }

    .proof-item:hover {
        transform: translateY(-4px);
        border-color: var(--primary);
    }

    .proof-number {
        font-size: 1.75rem;
        font-weight: 800;
        color: var(--accent);
        margin-bottom: 0.5rem;
    }

    .proof-label {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

    /* Section */
    .section {
        max-width: 1200px;
        margin: 6rem auto;
        padding: 0 5%;
    }

    h2 {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 3rem;
        font-weight: 700;
    }

    /* ROI Calculator */
    .calculator {
        background: var(--bg-card);
        border: 2px solid var(--accent);
        border-radius: 1rem;
        padding: 3rem;
        margin: 6rem auto;
        max-width: 900px;
        backdrop-filter: blur(10px);
    }

    .calculator h2 {
        color: var(--accent);
        margin-bottom: 2rem;
    }

    .calculator-inputs {
        margin-bottom: 3rem;
    }

    .calculator-inputs label {
        display: block;
        margin-bottom: 2rem;
        font-size: 1.125rem;
    }

    .slider-value {
        color: var(--accent);
        font-weight: 700;
        font-size: 1.25rem;
    }

    .calculator-inputs input[type="range"] {
        width: 100%;
        height: 8px;
        background: var(--border);
        border-radius: 5px;
        outline: none;
        margin-top: 0.5rem;
    }

    .calculator-inputs input[type="range"]::-webkit-slider-thumb {
        appearance: none;
        width: 24px;
        height: 24px;
        background: var(--accent);
        border-radius: 50%;
        cursor: pointer;
    }

    .calculator-inputs input[type="range"]::-moz-range-thumb {
        width: 24px;
        height: 24px;
        background: var(--accent);
        border-radius: 50%;
        cursor: pointer;
        border: none;
    }

    .calculator-results {
        text-align: center;
    }

    .savings-amount {
        font-size: 4rem;
        font-weight: 800;
        color: var(--success);
        margin: 1rem 0 2rem;
    }

    .breakdown {
        width: 100%;
        margin: 2rem auto;
        border-collapse: collapse;
        max-width: 600px;
    }

    .breakdown th,
    .breakdown td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid var(--border);
    }

    .breakdown th {
        color: var(--text-secondary);
        font-weight: 600;
    }

    .breakdown .highlight {
        color: var(--success);
        font-weight: 700;
    }

    .calculator-note {
        text-align: center;
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin-top: 2rem;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.6;
    }

    .calculator-note a {
        color: var(--accent);
        text-decoration: none;
    }

    .calculator-note a:hover {
        text-decoration: underline;
    }

    /* Before/After Comparison */
    .comparison {
        margin: 6rem auto;
    }

    .comparison-grid {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        gap: 2rem;
        align-items: center;
    }

    .comparison-side {
        padding: 2rem;
        border-radius: 1rem;
        border: 2px solid;
    }

    .comparison-without {
        background: rgba(239, 68, 68, 0.05);
        border-color: var(--error);
    }

    .comparison-with {
        background: rgba(16, 185, 129, 0.05);
        border-color: var(--success);
    }

    .comparison-side h3 {
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
    }

    .comparison-side ul {
        list-style: none;
    }

    .comparison-side li {
        padding: 1rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        font-size: 1.125rem;
    }

    .comparison-side li:last-child {
        border-bottom: none;
    }

    .comparison-divider {
        font-size: 2rem;
        font-weight: 800;
        color: var(--text-muted);
    }

    /* How It Works */
    .how-it-works {
        margin: 6rem auto;
    }

    .steps {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
    }

    .step {
        flex: 1;
        text-align: center;
        padding: 2rem;
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: 1rem;
        position: relative;
        transition: transform 0.3s, border-color 0.3s;
    }

    .step:hover {
        transform: translateY(-8px);
        border-color: var(--accent);
    }

    .step-number {
        position: absolute;
        top: -1.25rem;
        left: 50%;
        transform: translateX(-50%);
        width: 2.5rem;
        height: 2.5rem;
        background: var(--accent);
        color: var(--bg-dark);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        font-size: 1.25rem;
    }

    .step-icon {
        font-size: 3rem;
        margin: 1rem 0;
    }

    .step h3 {
        margin: 1rem 0;
        font-size: 1.5rem;
    }

    .step p {
        color: var(--text-secondary);
        line-height: 1.8;
    }

    .step-arrow {
        font-size: 2rem;
        color: var(--accent);
        flex-shrink: 0;
    }

    /* Three-Kosha Architecture (PRESERVED) */
    .kosha-architecture {
        background: var(--bg-card);
        border: 2px solid var(--primary);
        border-radius: 1rem;
        padding: 3rem;
        margin: 6rem auto;
        max-width: 1200px;
    }

    .kosha-architecture h2 {
        color: var(--primary);
        margin-bottom: 1rem;
    }

    .kosha-subtitle {
        text-align: center;
        color: var(--text-secondary);
        font-style: italic;
        margin-bottom: 3rem;
        font-size: 1.125rem;
    }

    .koshas {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .kosha {
        background: rgba(15, 23, 42, 0.5);
        padding: 2.5rem;
        border-radius: 1rem;
        text-align: center;
        border: 2px solid var(--border);
        transition: all 0.3s ease;
    }

    .kosha:hover {
        border-color: var(--primary);
        transform: scale(1.05);
    }

    .kosha-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        display: block;
        border-radius: 12px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .kosha-icon:hover {
        transform: scale(1.1);
    }

    .kosha h4 {
        font-size: 1.5rem;
        color: var(--primary);
        margin-bottom: 0.5rem;
    }

    .kosha-layer-subtitle {
        font-style: italic;
        color: var(--text-secondary);
        margin-bottom: 1rem;
        font-size: 0.95rem;
    }

    .kosha p {
        color: var(--text-secondary);
        line-height: 1.8;
    }

    .kosha-note {
        text-align: center;
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border);
        color: var(--text-secondary);
        font-size: 0.875rem;
        line-height: 1.6;
    }

    .kosha-note a {
        color: var(--primary);
        text-decoration: none;
    }

    .kosha-note a:hover {
        text-decoration: underline;
    }

    /* Architecture Section */
    .architecture-section {
        background: rgba(30, 41, 59, 0.3);
        border: 1px solid var(--primary);
        border-radius: 1rem;
        padding: 3rem 2rem;
        margin: 6rem auto;
    }

    .section-subtitle {
        text-align: center;
        color: var(--text-secondary);
        max-width: 700px;
        margin: 0 auto 3rem;
        line-height: 1.6;
    }

    .architecture-diagram {
        max-width: 1000px;
        margin: 0 auto;
    }

    .arch-layer {
        background: rgba(15, 23, 42, 0.5);
        border: 1px solid var(--border);
        border-radius: 1rem;
        padding: 2rem;
        margin: 1rem 0;
    }

    .arch-layer h3 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: var(--text-primary);
    }

    .arch-ui .arch-cards {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .arch-card {
        background: rgba(124, 58, 237, 0.1);
        border: 1px solid var(--primary);
        border-radius: 0.75rem;
        padding: 1.5rem;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .arch-card.arch-active {
        border-color: var(--accent);
        background: rgba(245, 158, 11, 0.1);
    }

    .arch-card.arch-coming {
        opacity: 0.6;
        border-style: dashed;
    }

    .arch-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 30px rgba(124, 58, 237, 0.3);
    }

    .arch-icon {
        font-size: 2.5rem;
        display: block;
        margin-bottom: 0.75rem;
    }

    .arch-card h4 {
        margin: 0.5rem 0;
        color: var(--text-primary);
        font-size: 1.125rem;
    }

    .arch-card p {
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin: 0.5rem 0;
    }

    .arch-link {
        display: inline-block;
        margin-top: 0.5rem;
        color: var(--accent);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .arch-link:hover {
        text-decoration: underline;
    }

    .arch-arrow {
        text-align: center;
        padding: 1rem 0;
    }

    .arch-core {
        background: linear-gradient(135deg, rgba(124, 58, 237, 0.2), rgba(245, 158, 11, 0.2));
        border: 2px solid var(--primary);
        text-align: center;
    }

    .arch-core-features {
        display: flex;
        justify-content: center;
